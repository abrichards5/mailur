#!/bin/bash
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -exuo pipefail
. bin/activate

secret=${secret:-root}

cat <<"EOF" > /etc/yum.repos.d/dovecot.repo
[dovecot-2.3-latest]
name=Dovecot 2.3 CentOS $releasever - $basearch
baseurl=http://repo.dovecot.org/ce-2.3-latest/centos/$releasever/RPMS/$basearch
gpgkey=https://repo.dovecot.org/DOVECOT-REPO-GPG
gpgcheck=1
enabled=1
EOF
yum install -y dovecot dovecot-pigeonhole

id -u vmail || (
groupadd -g 5000 vmail
useradd -m -d /home/vmail -s /bin/false -u 5000 -g vmail vmail
)

[ -d '/etc/dovecot.bak' ] || (
    mv /etc/dovecot{,.bak}
    rm -rf /etc/dovecot
    mkdir /etc/dovecot
)
cat <<EOF > /etc/dovecot/dovecot.conf
auth_debug=yes
auth_debug_passwords=yes
auth_verbose_passwords=sha1
mail_debug=yes
verbose_ssl=yes

ssl = no
ssl_client_ca_file = /etc/pki/tls/cert.pem

# TODO: remove after migration to new metadata storage
# should be big enough to save all message-ids as metadata
imap_max_line_length = 10M

mail_location = sdbox:~

auth_master_user_separator = *
passdb {
    driver = passwd-file
    args = /etc/dovecot/passwd.masters
    master = yes
}
passdb {
    driver = passwd-file
    args = /etc/dovecot/passwd.users
}
userdb {
    driver = passwd-file
    args = /etc/dovecot/passwd.users
    default_fields = uid=vmail gid=vmail home=/home/vmail/%u
}

namespace main {
    inbox = yes
    prefix =
    separator = /
}
namespace mlr {
    prefix = mlr/
    separator = /
    hidden = yes
    list = no
    location = sdbox:~/mlr
    mailbox {
        auto = create
    }
    mailbox All {
        auto = subscribe
        special_use = \All
    }
    mailbox Sys {
        auto = create
    }
    mailbox Del {
        auto = create
        autoexpunge = 30d
    }
}

mail_plugins = \$mail_plugins acl notify mail_log replication fts fts_lucene
plugin {
    acl = vfile:/etc/dovecot/acl
    acl_globals_only = yes

    mail_log_events = delete undelete expunge copy save flag_change
    mail_log_fields = uid box msgid flags

    fts = lucene
    fts_lucene = whitespace_chars=@.
    fts_autoindex = yes
    fts_autoindex_exclude = INBOX
    fts_autoindex_exclude2 = mlr/Sys
}

mail_attribute_dict = file:%h/dovecot-attributes
protocol imap {
    mail_plugins = \$mail_plugins imap_filter_sieve
    mail_max_userip_connections = 20
    imap_metadata = yes
}

protocols = imap
service imap-login {
    inet_listener imap {
        port = 143
        address = localhost
    }

    process_min_avail = 1
}
service imap {
    vsz_limit = 2G
}
service indexer-worker {
    vsz_limit = 2G
}

replication_dsync_parameters = -d -n main -n mlr
service replicator {
    process_min_avail = 1
    unix_listener replicator-doveadm {
        user = vmail
        mode = 0600
    }
}
service aggregator {
    fifo_listener replication-notify-fifo {
        user = vmail
    }
    unix_listener replication-notify {
        user = vmail
    }
}
service doveadm {
    inet_listener {
    address = localhost
        port = 12300
    }
}
# use https port from nginx
doveadm_port = 12345
doveadm_password = $secret
EOF
cat <<EOF > /etc/dovecot/passwd.masters
root:{plain}$secret
EOF
cat <<"EOF" > /etc/dovecot/acl
* owner lrst
mlr/* owner lr
INBOX owner lrstpi
* user=root lrwstipe
EOF

bin/install-users

systemctl enable dovecot
systemctl restart dovecot
